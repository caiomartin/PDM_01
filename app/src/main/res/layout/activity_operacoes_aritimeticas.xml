<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="0.7">


        <EditText
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/n1"
            android:hint="@string/edit_menssage"
            android:textColor="#069"
            style="@style/inputDecimal"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/n2"
            android:hint="@string/edit_menssage"
            android:textColor="#069"
            android:layout_weight="0.00"
            style="@style/inputDecimal" />




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/soma"
                android:onClick="soma"
                android:background="#069"
                android:textColor="#f2f2f2"
                android:layout_marginBottom="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:padding="2dp"
                android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/subtracao"
                android:onClick="soma"
                android:background="#0075F1"
                android:textColor="#f2f2f2"
                android:layout_gravity="left"
                android:layout_marginBottom="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:padding="2dp"
                android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/divisao"
                android:onClick="soma"
                android:background="#00AAFF"
                android:textColor="#f2f2f2"
                android:layout_gravity="left"
                android:layout_marginBottom="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:padding="2dp"
                android:textSize="25dp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/multiplicacao"
                android:onClick="soma"
                android:background="#069"
                android:textColor="#f2f2f2"
                android:layout_marginBottom="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:padding="2dp"
                android:textSize="25dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resultado"
            android:textColor="#024d66"
            android:layout_weight="0.00"
            android:background="#ccc"
            android:textAlignment="center"
            android:textSize="22dp"
            android:paddingTop="5dp"
            android:layout_gravity="top"
            android:paddingLeft="100dp"
            android:paddingBottom="5dp"
            android:textIsSelectable="false" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:id="@+id/voltar"
        android:onClick="voltar"
        android:background="#333"
        android:textColor="#ccc"
        android:layout_marginBottom="0dp"
        android:layout_gravity="bottom" />

</LinearLayout>
